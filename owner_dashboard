<?php
require 'db_connect.php';
session_start();

// Update employee info
if (isset($_POST['update_employee'])) {
    $stmt = $conn->prepare("UPDATE Employee SET fName=?, lName=?, position=?, phone=? WHERE eID=?");
    $stmt->bind_param("ssssi", $_POST['fName'], $_POST['lName'], $_POST['position'], $_POST['phone'], $_POST['eID']);
    $stmt->execute();
    $stmt->close();
}

// Delete employee
if (isset($_POST['delete_employee'])) {
    $stmt = $conn->prepare("DELETE FROM Employee WHERE eID=?");
    $stmt->bind_param("i", $_POST['eID']);
    $stmt->execute();
    $stmt->close();
}

// Update inventory
if (isset($_POST['update_inventory'])) {
    $product_id = intval($_POST['product_id']);
    $action = $_POST['action'];
    $amount = intval($_POST['amount']);

    $stmt = ($action === 'add') ?
        $conn->prepare("UPDATE Products SET quantity = quantity + ? WHERE product_id = ?") :
        $conn->prepare("UPDATE Products SET quantity = GREATEST(quantity - ?, 0) WHERE product_id = ?");

    if ($stmt) {
        $stmt->bind_param("ii", $amount, $product_id);
        $stmt->execute();
        $stmt->close();
    } else {
        die("Inventory update failed: " . $conn->error);
    }
}

// Fetch employee, inventory, and cart totals
$employees = $conn->query("SELECT * FROM Employee");
$inventory = $conn->query("SELECT * FROM Products");
$sales = $conn->query("SELECT * FROM Cart");

$total_sales = 0;
while ($row = $sales->fetch_assoc()) {
    $total_sales += $row['total'];
}
?>

<!DOCTYPE html>
<html>
<head>
    <title>Owner Dashboard</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f8f8f8; padding: 30px; }
        .section { background: #fff; padding: 20px; margin-bottom: 40px; border-radius: 10px; box-shadow: 0 0 10px #ccc; }
        h2 { margin-top: 0; }
        table { width: 100%; border-collapse: collapse; margin-top: 15px; }
        th, td { border: 1px solid #ccc; padding: 10px; text-align: center; }
        input, select, button { padding: 6px; margin: 5px; }
    </style>
</head>
<body>

<h1>🌿 Owner Dashboard - Azalea Haven</h1>

<div class="section">
    <h2>👥 Employee Management</h2>
    <?php while ($emp = $employees->fetch_assoc()): ?>
        <form method="POST">
            <input type="hidden" name="eID" value="<?= $emp['eID'] ?>">
            <input type="text" name="fName" value="<?= htmlspecialchars($emp['fName']) ?>" required>
            <input type="text" name="lName" value="<?= htmlspecialchars($emp['lName']) ?>" required>
            <input type="text" name="position" value="<?= htmlspecialchars($emp['position']) ?>" required>
            <input type="text" name="phone" value="<?= htmlspecialchars($emp['phone']) ?>">
            <button type="submit" name="update_employee">Update</button>
            <button type="submit" name="delete_employee" onclick="return confirm('Are you sure you want to remove this employee?')">Remove</button>
        </form>
    <?php endwhile; ?>
</div>

<div class="section">
    <h2>📦 Inventory Management</h2>
    <?php foreach ($inventory as $item): ?>
        <form method="POST">
            <strong><?= htmlspecialchars($item['name']) ?> — Qty: <?= $item['quantity'] ?></strong>
            <input type="hidden" name="product_id" value="<?= $item['product_id'] ?>">
            <input type="number" name="amount" value="1" min="1" required>
            <select name="action">
                <option value="add">Add</option>
                <option value="remove">Remove</option>
            </select>
            <button type="submit" name="update_inventory">Update</button>
        </form>
    <?php endforeach; ?>
</div>

<div class="section">
    <h2>💰 Sales Summary</h2>
    <p><strong>Total Sales:</strong> $<?= number_format($total_sales, 2) ?></p>
</div>

<a href="landing.php">← Back to Home</a>

</body>
</html>
